<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Vendas | Phone Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 260px;
      min-height: 100vh;
      background: #111827;
    }

    .sidebar a {
      color: #9ca3af;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      display: block;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #1f2937;
      color: #fff;
    }

    .card-dashboard {
      border: none;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>

<div class="d-flex">

  <%- include('partials/sidebar') %>

  <!-- Conteúdo -->
  <main class="flex-grow-1 p-4">

    <!-- Topo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold">Vendas</h3>
      <button class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nova Venda
      </button>
    </div>

    <!-- Cards resumo -->
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Vendas Hoje</small>
          <h4 class="fw-bold">8</h4>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Faturamento do Dia</small>
          <h4 class="fw-bold text-success">R$ 2.450,00</h4>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Ticket Médio</small>
          <h4 class="fw-bold">R$ 306,25</h4>
        </div>
      </div>
    </div>

    <!-- Tabela de vendas -->
    <div class="card card-dashboard">
      <div class="card-header bg-white fw-semibold">
        Histórico de Vendas
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Cliente</th>
              <th>Produto</th>
              <th>Pagamento</th>
              <th>Total</th>
              <th>Data</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#201</td>
              <td>João Silva</td>
              <td>iPhone 11</td>
              <td><span class="badge bg-secondary">Cartão</span></td>
              <td class="fw-semibold">R$ 1.500,00</td>
              <td>05/01/2026</td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i>
                </button>
              </td>
            </tr>

            <tr>
              <td>#202</td>
              <td>Maria Souza</td>
              <td>Capinha Samsung</td>
              <td><span class="badge bg-success">Pix</span></td>
              <td class="fw-semibold">R$ 80,00</td>
              <td>05/01/2026</td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
