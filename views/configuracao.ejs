<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Configurações | Phone Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 260px;
      min-height: 100vh;
      background: #111827;
    }

    .sidebar a {
      color: #9ca3af;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      display: block;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #1f2937;
      color: #fff;
    }

    .card-dashboard {
      border: none;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .nav-pills .nav-link.active {
      background-color: #111827;
    }
  </style>
</head>
<body>

<div class="d-flex">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Conteúdo -->
  <main class="flex-grow-1 p-4">

    <!-- Topo -->
    <div class="mb-4">
      <h3 class="fw-bold">Configurações</h3>
      <span class="text-muted">Gerencie preferências do sistema</span>
    </div>

    <div class="row g-4">

      <!-- Menu Configurações -->
      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <ul class="nav nav-pills flex-column gap-2">
            <li class="nav-item">
              <a class="nav-link active" href="#">
                <i class="bi bi-gear me-2"></i> Geral
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="bi bi-shop me-2"></i> Loja
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="bi bi-people me-2"></i> Usuários
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="bi bi-cash-stack me-2"></i> Financeiro
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="bi bi-shield-lock me-2"></i> Segurança
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Conteúdo Configuração -->
      <div class="col-md-9">

        <!-- Geral -->
        <div class="card card-dashboard mb-4">
          <div class="card-header bg-white fw-semibold">
            Configurações Gerais
          </div>

          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Nome do Sistema</label>
                <input type="text" class="form-control" value="Phone Store">
              </div>
              <div class="col-md-6">
                <label class="form-label">Fuso Horário</label>
                <select class="form-select">
                  <option selected>Brasil (GMT-3)</option>
                  <option>UTC</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Idioma</label>
                <select class="form-select">
                  <option selected>Português</option>
                  <option>English</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Tema</label>
                <select class="form-select">
                  <option selected>Claro</option>
                  <option>Escuro</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Loja -->
        <div class="card card-dashboard mb-4">
          <div class="card-header bg-white fw-semibold">
            Configurações da Loja
          </div>

          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Nome da Loja</label>
                <input type="text" class="form-control" value="Phone Store Centro">
              </div>
              <div class="col-md-6">
                <label class="form-label">Telefone</label>
                <input type="text" class="form-control" value="(11) 99999-0000">
              </div>

              <div class="col-md-12">
                <label class="form-label">Endereço</label>
                <input type="text" class="form-control" value="Rua Exemplo, 123 - Centro">
              </div>
            </div>
          </div>
        </div>

        <!-- Financeiro -->
        <div class="card card-dashboard mb-4">
          <div class="card-header bg-white fw-semibold">
            Financeiro
          </div>

          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Moeda</label>
                <select class="form-select">
                  <option selected>BRL (R$)</option>
                  <option>USD ($)</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Taxa de Serviço (%)</label>
                <input type="number" class="form-control" value="10">
              </div>
              <div class="col-md-4">
                <label class="form-label">Forma Padrão</label>
                <select class="form-select">
                  <option selected>Dinheiro</option>
                  <option>Cartão</option>
                  <option>PIX</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Ações -->
        <div class="d-flex justify-content-end">
          <button class="btn btn-outline-secondary me-2">Cancelar</button>
          <button class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Salvar Alterações
          </button>
        </div>

      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
