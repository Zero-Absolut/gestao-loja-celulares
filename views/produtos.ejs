<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Produtos | Phone Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 260px;
      min-height: 100vh;
      background: #111827;
    }

    .sidebar a {
      color: #9ca3af;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      display: block;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #1f2937;
      color: #fff;
    }

    .card-dashboard {
      border: none;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>

<div class="d-flex">

  <!-- Sidebar -->
  

   <%- include('partials/sidebar') %>

  <!-- Conteúdo -->
  <main class="flex-grow-1 p-4">

    <!-- Topo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold">Produtos</h3>
      <a href="/cadastro-produtos" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Novo Produto
      </a>
    </div>

    <!-- Cards resumo -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Total de Produtos</small>
          <h4 class="fw-bold">128</h4>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Em Estoque</small>
          <h4 class="fw-bold text-success">110</h4>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Estoque Baixo</small>
          <h4 class="fw-bold text-warning">15</h4>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Sem Estoque</small>
          <h4 class="fw-bold text-danger">3</h4>
        </div>
      </div>
    </div>

    <!-- Tabela produtos -->
    <div class="card card-dashboard">
      <div class="card-header bg-white fw-semibold">
        Lista de Produtos
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Produto</th>
              <th>Categoria</th>
              <th>Estoque</th>
              <th>Preço</th>
              <th>Status</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#301</td>
              <td>iPhone 11</td>
              <td>Smartphone</td>
              <td>5</td>
              <td class="fw-semibold">R$ 1.800,00</td>
              <td><span class="badge bg-warning">Estoque Baixo</span></td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>

            <tr>
              <td>#302</td>
              <td>Capinha Samsung S21</td>
              <td>Acessório</td>
              <td>30</td>
              <td class="fw-semibold">R$ 49,90</td>
              <td><span class="badge bg-success">Em Estoque</span></td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>

            <tr>
              <td>#303</td>
              <td>Película de Vidro</td>
              <td>Acessório</td>
              <td>0</td>
              <td class="fw-semibold">R$ 29,90</td>
              <td><span class="badge bg-danger">Sem Estoque</span></td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
