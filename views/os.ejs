<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Ordens de Serviço | Phone Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 260px;
      min-height: 100vh;
      background: #111827;
    }

    .sidebar a {
      color: #9ca3af;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      display: block;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #1f2937;
      color: #fff;
    }

    .card-dashboard {
      border: none;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>

<div class="d-flex">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Conteúdo -->
  <main class="flex-grow-1 p-4">

    <!-- Topo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold">Ordens de Serviço</h3>
      <button class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nova OS
      </button>
    </div>

    <!-- Filtros -->
    <div class="card card-dashboard p-3 mb-4">
      <div class="row g-3">
        <div class="col-md-3">
          <input type="text" class="form-control" placeholder="Buscar por cliente ou OS">
        </div>
        <div class="col-md-3">
          <select class="form-select">
            <option selected>Status</option>
            <option>Aberta</option>
            <option>Em Reparo</option>
            <option>Aguardando Peça</option>
            <option>Concluída</option>
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select">
            <option selected>Técnico</option>
            <option>Carlos</option>
            <option>André</option>
            <option>Marcos</option>
          </select>
        </div>
        <div class="col-md-3">
          <button class="btn btn-outline-secondary w-100">
            <i class="bi bi-funnel"></i> Filtrar
          </button>
        </div>
      </div>
    </div>

    <!-- Tabela OS -->
    <div class="card card-dashboard">
      <div class="card-header bg-white fw-semibold">
        Lista de Ordens de Serviço
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Cliente</th>
              <th>Aparelho</th>
              <th>Defeito</th>
              <th>Status</th>
              <th>Técnico</th>
              <th>Entrada</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#101</td>
              <td>João Silva</td>
              <td>iPhone 11</td>
              <td>Troca de tela</td>
              <td><span class="badge bg-warning">Em Reparo</span></td>
              <td>Carlos</td>
              <td>05/01/2026</td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-sm btn-outline-success">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>

            <tr>
              <td>#102</td>
              <td>Maria Souza</td>
              <td>Samsung S21</td>
              <td>Bateria</td>
              <td><span class="badge bg-info">Aguardando Peça</span></td>
              <td>André</td>
              <td>04/01/2026</td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-sm btn-outline-success">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>

            <tr>
              <td>#103</td>
              <td>Lucas Pereira</td>
              <td>Motorola G54</td>
              <td>Não liga</td>
              <td><span class="badge bg-success">Concluída</span></td>
              <td>Marcos</td>
              <td>03/01/2026</td>
              <td class="text-end">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-sm btn-outline-success">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
