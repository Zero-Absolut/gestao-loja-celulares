<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Relatórios | Phone Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
    }

    .sidebar {
      width: 260px;
      min-height: 100vh;
      background: #111827;
    }

    .sidebar a {
      color: #9ca3af;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      display: block;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #1f2937;
      color: #fff;
    }

    .card-dashboard {
      border: none;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>

<div class="d-flex">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Conteúdo -->
  <main class="flex-grow-1 p-4">

    <!-- Topo -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold">Relatórios</h3>
      <button class="btn btn-outline-primary">
        <i class="bi bi-file-earmark-arrow-down me-1"></i> Exportar
      </button>
    </div>

    <!-- Filtros -->
    <div class="card card-dashboard p-3 mb-4">
      <div class="row g-3 align-items-end">
        <div class="col-md-3">
          <label class="form-label small">Período</label>
          <input type="date" class="form-control">
        </div>
        <div class="col-md-3">
          <label class="form-label small">Até</label>
          <input type="date" class="form-control">
        </div>
        <div class="col-md-3">
          <label class="form-label small">Tipo de Relatório</label>
          <select class="form-select">
            <option selected>Selecione</option>
            <option>Vendas</option>
            <option>Ordens de Serviço</option>
            <option>Clientes</option>
            <option>Estoque</option>
            <option>Técnicos</option>
          </select>
        </div>
        <div class="col-md-3">
          <button class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Gerar Relatório
          </button>
        </div>
      </div>
    </div>

    <!-- Cards Resumo -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Total de Vendas</small>
          <h5 class="fw-bold mb-0">R$ 18.320,00</h5>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">OS Concluídas</small>
          <h5 class="fw-bold mb-0">42</h5>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Clientes Ativos</small>
          <h5 class="fw-bold mb-0">128</h5>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card-dashboard p-3">
          <small class="text-muted">Ticket Médio</small>
          <h5 class="fw-bold mb-0">R$ 436,00</h5>
        </div>
      </div>
    </div>

    <!-- Tabela Relatório -->
    <div class="card card-dashboard">
      <div class="card-header bg-white fw-semibold">
        Resultado do Relatório
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Data</th>
              <th>Descrição</th>
              <th>Referência</th>
              <th>Responsável</th>
              <th>Status</th>
              <th class="text-end">Valor</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>05/01/2026</td>
              <td>Venda - iPhone 11</td>
              <td>#V1021</td>
              <td>André</td>
              <td><span class="badge bg-success">Finalizado</span></td>
              <td class="text-end">R$ 2.500,00</td>
            </tr>
            <tr>
              <td>04/01/2026</td>
              <td>OS - Troca de Tela</td>
              <td>#OS101</td>
              <td>Carlos</td>
              <td><span class="badge bg-success">Concluído</span></td>
              <td class="text-end">R$ 850,00</td>
            </tr>
            <tr>
              <td>03/01/2026</td>
              <td>Venda - Acessórios</td>
              <td>#V1018</td>
              <td>Marcos</td>
              <td><span class="badge bg-success">Finalizado</span></td>
              <td class="text-end">R$ 420,00</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
